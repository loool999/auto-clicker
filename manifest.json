{
  "name": "that one Auto Clicker",
  "description": "Just click automation",
  "version": "1.2.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Ctrl + ,(Comma): Start auto click\nCtrl + Alt + ,(Comma): Start auto click with interval\nCtrl + .(Period): Stop auto click"
  },
  "icons": {
    "128": "/img/click.png"
  },
  "manifest_version": 2,

  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/common.js",
        "js/AutoClicker.js",
        "js/content.js"
      ]
    }
  ]
}
